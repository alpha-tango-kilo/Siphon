{
  "name": "siphon",
  "version": "0.1.0",
  "description": "Monitors traffic to data collecting domains",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "graphs": "parcel src/graphs/graphs.html",
    "dev": "parcel src/manifest.json --host localhost --target dev",
    "build": "rm -rf build/** && parcel build src/manifest.json --target prod",
    "ff-dev": "web-ext run -s ./dist --pref devtools.toolbox.splitconsoleEnabled=true --start-url about:debugging#/runtime/this-firefox",
    "ff-build": "web-ext run -s ./build --pref devtools.toolbox.splitconsoleEnabled=true --start-url about:debugging#/runtime/this-firefox",
    "clean": "rm -rf dist/** build/**"
  },
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {
      "distDir": "build"
    }
  },
  "repository": {
    "type": "git"
  },
  "author": "alpha-tango-kilo",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.2.4",
    "chart.js": "^2.9.4",
    "postcss": "^8.2.4",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0-nightly.2151",
    "parcel": "^2.0.0-nightly.558",
    "typescript": "^4.1",
    "web-ext-types": "^3.2.1"
  }
}
