{
  "name": "siphon",
  "version": "0.1.0",
  "description": "Monitors traffic to data collecting domains",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "graphs": "parcel src/graphs/graphs.html",
    "dev": "parcel src/manifest.json --host localhost --target dev",
    "build": "rm -rf build/** && parcel build src/manifest.json --target prod",
    "ff-dev": "web-ext run -s ./dist --pref devtools.toolbox.splitconsoleEnabled=true --start-url about:debugging#/runtime/this-firefox",
    "ff-build": "web-ext run -s ./build --pref devtools.toolbox.splitconsoleEnabled=true --start-url about:debugging#/runtime/this-firefox",
    "clean": "rm -rf dist/** build/** .parcel-cache .cache"
  },
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {
      "distDir": "build"
    }
  },
  "repository": {
    "type": "git"
  },
  "author": "alpha-tango-kilo",
  "license": "MIT",
  "dependencies": {
    "@types/psl": "^1.1.0",
    "@types/uuid": "^8.3.0",
    "autoprefixer": "^10.2.5",
    "chart.js": "^2.9.4",
    "dexie": "^3.0.3",
    "filesize": "^6.1.0",
    "postcss": "^8.2.9",
    "psl": "^1.8.0",
    "tailwindcss": "^2.0.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0-nightly.2257",
    "@parcel/optimizer-cssnano": "^2.0.0-nightly.635",
    "@parcel/optimizer-htmlnano": "^2.0.0-nightly.635",
    "@parcel/packager-css": "^2.0.0-nightly.635",
    "@parcel/packager-html": "^2.0.0-nightly.635",
    "@parcel/transformer-css": "^2.0.0-nightly.635",
    "@parcel/transformer-html": "^2.0.0-nightly.635",
    "@parcel/transformer-postcss": "^2.0.0-nightly.635",
    "@parcel/transformer-posthtml": "^2.0.0-nightly.635",
    "@parcel/transformer-typescript-tsc": "^2.0.0-nightly.635",
    "parcel": "^2.0.0-nightly.633",
    "typescript": "^4.2.3",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill-ts": "^0.25.0"
  }
}
