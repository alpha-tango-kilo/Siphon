{
    "manifest_version": 2,
    "name": "Siphon",
    "description": "Monitors traffic to data collecting domains",
    "version": "1.0.1",
    "icons": {
        "48": "icons/siphon.svg",
        "96": "icons/siphon.svg"
    },
    "background": {
        "scripts": [
            "background/proxy.ts"
        ]
    },
    "permissions": [
        "tabs",
        "webRequest",
        "storage",
        "unlimitedStorage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icons/siphon.svg",
        "default_title": "Siphon",
        "default_popup": "popup/popup.html"
    }
}
